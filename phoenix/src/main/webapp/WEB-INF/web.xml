<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
    	<servlet-name>phoenix</servlet-name>
    	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    	<load-on-startup>1</load-on-startup>
  	</servlet>

  	<servlet-mapping>
    	<servlet-name>phoenix</servlet-name>
    	<url-pattern>*.html</url-pattern>
  	</servlet-mapping>

	<welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>
  	
  	<!-- Servlet para la recuperaciÃ³n de blobs de app engine (para recuperar imagenes) -->
  	<servlet>
  		<servlet-name>ImagenServicio</servlet-name>
  		<servlet-class>controller.ImagenServicio</servlet-class>
  	</servlet>
  	
  	<servlet-mapping>
  	<servlet-name>ImagenServicio</servlet-name>
  	<url-pattern>/imagenServicio</url-pattern>
  	</servlet-mapping>
</web-app>
